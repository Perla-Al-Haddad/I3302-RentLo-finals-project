@using Microsoft.AspNetCore.Identity
@model I3302_RentLo_finals_project.Models.Property
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
}



@section Scripts {
<script>
    function updateCitiesDropdown(t) {
        $.ajax({
            type: "GET",
            url: '/Properties/OnGetCitiesByCountryId?countryId=' + $(t).val(),
            success: function (data) {
                $('#city-select-container').removeClass('d-none');
                let options_html = "";
                for (let i = 0; i < data.length; i++)
                    options_html += "<option value='" + data[i].id + "'>" + data[i].cityName + "</option>";
                $('#city-select').html(options_html);
            },
            error: function (result) {
                alert("fail");
            }
        });
    }
</script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div class="card card-rounded grid-margin">
    <div class="card-body">
        <h1 class="pb-2" style="border-bottom: 1px solid #ddd">Create Property</h1>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="PropertyTitle" class="control-label"></label>
                        <input asp-for="PropertyTitle" class="form-control" />
                        <span asp-validation-for="PropertyTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="PropertyDescription" class="control-label"></label>
                        <textarea rows="5" asp-for="PropertyDescription" class="form-control"></textarea>
                        <span asp-validation-for="PropertyDescription" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group mb-2 col-md-6">
                            <label asp-for="PricePerDay" class="control-label"></label>
                            <input asp-for="PricePerDay" class="form-control" />
                            <span asp-validation-for="PricePerDay" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2 col-md-6">
                            <label asp-for="MaxGuests" class="control-label"></label>
                            <input asp-for="MaxGuests" class="form-control" />
                            <span asp-validation-for="MaxGuests" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mb-2 col-md-6">
                            <label asp-for="NumberOfBeds" class="control-label"></label>
                            <input asp-for="NumberOfBeds" class="form-control" />
                            <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2 col-md-6">
                            <label asp-for="NumberOfBathrooms" class="control-label"></label>
                            <input asp-for="NumberOfBathrooms" class="form-control" />
                            <span asp-validation-for="NumberOfBathrooms" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mb-2">
                        <input asp-for="CreatorId" type="hidden" value="@UserManager.GetUserAsync(User).Result.Id" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="form-group mb-2 col-md-6">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select class="form-select" asp-for="CategoryId">
                                @foreach (var item in ViewBag.categoriesList)
                                {
                                    <option value="@item.Id">@item.CategoryDescription</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-2">
                                <label class="control-label">Property Location</label>
                                <select class="form-select" name="CountryId" onChange="updateCitiesDropdown(this)">
                                    @foreach (var item in ViewBag.countriesList)
                                    {
                                        <option value="@item.id">@item.CountryName</option>
                                    }
                                </select>
                            </div>
                            <div id="city-select-container" class="form-group mb-2 d-none">
                                <label asp-for="CityId" class="control-label"></label>
                                <select id="city-select" asp-for="CityId" class="form-select"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-2">
                        <input asp-for="Favorites" type="hidden" value="0" class="form-control" />
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-group mb-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
